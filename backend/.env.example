# Database
DATABASE_URL=postgresql+asyncpg://modify:modify@localhost:5432/modify

# Nexus Mods API
NEXUS_API_KEY=your_nexus_api_key_here

# LLM Provider: "ollama", "groq", "together", "huggingface"
LLM_PROVIDER=ollama

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3.1:8b

# Groq (cloud - free tier)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Together AI (cloud - free tier)
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-3.3-70B-Instruct-Turbo-Free

# HuggingFace (cloud - free tier)
HUGGINGFACE_API_KEY=your_hf_api_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-3.1-8B-Instruct

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:4200
# Production: CORS_ORIGINS=https://moddersomni.com,https://www.moddersomni.com

# Custom Mod Source (optional)
CUSTOM_SOURCE_API_URL=
CUSTOM_SOURCE_API_KEY=

# ---- Authentication ----
# Secret key for JWT signing (CHANGE THIS in production!)
SECRET_KEY=change-me-in-production-use-a-random-string

# JWT settings
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=15
# REFRESH_TOKEN_EXPIRE_DAYS=30

# Frontend URL (for email links and OAuth redirects)
FRONTEND_URL=http://localhost:4200
# Production: FRONTEND_URL=https://moddersomni.com

# ---- Email (SMTP) ----
# Leave SMTP_HOST empty to use console email sender (dev mode)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@moddersomni.com
SMTP_FROM_NAME=ModdersOmni
# SMTP_USE_TLS=true
# EMAIL_VERIFICATION_EXPIRE_HOURS=24

# ---- OAuth - Google ----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback
# Production: GOOGLE_REDIRECT_URI=https://api.moddersomni.com/api/auth/oauth/google/callback

# ---- OAuth - Discord ----
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/api/auth/oauth/discord/callback
# Production: DISCORD_REDIRECT_URI=https://api.moddersomni.com/api/auth/oauth/discord/callback
